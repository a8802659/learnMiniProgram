<!--pages/home/home.wxml-->
<my-cpn></my-cpn>
<my-cpn/>
<!-- 组件与外部样式的关系 -->
<my-style/>
<!-- 传递数据/样式 -->
<my-props title="wzf" titleclass="red"/>
<my-props title="wzf" titleclass="green"/>
<!-- 组件自定义事件 -->
<view>------</view>
<view>counter:{{counter}}</view>
<view>age:{{age}}</view>
<my-event bind:increment="handleIncrement"/>
<!-- f-tab-control -->
<f-tab-control titles="{{tabtitle}}" bind:itemclick="handleTabClick"/>
<!-- 直接选中组件修改数据/调用方法 -->
<my-sel id="sel-id"/>
<button size="mini" bind:tap="handleIncrementCpn" >修改组件内的数据</button>
<!-- 单个插槽 -->
<my-slot>
  <button size="mini">我是中间按钮</button>
</my-slot>
<my-slot>
  <slider value="60"></slider>
</my-slot>
<!-- 多个插槽 -->
<button bind:tap="handleShow">{{showMessage}}</button>
<block wx:if="{{isShow}}">
  <my-slot-t>
    <button slot="slot1">按钮1</button>
    <button slot="slot2">按钮2</button>
    <button slot="slot3">按钮3</button>
  </my-slot-t>
</block>