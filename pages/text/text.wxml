<!--pages/text/text.wxml-->
<!-- 1.基本使用 默认不换行-->
<text>Hello world \n</text>
<text>你好小程序 \n</text>

<!-- 2.selectable：true -->
<text selectable="{{true}}">Hello WZF 只写一个属性也代表true \n</text>
<text selectable="{{false}}">Hello WZF 默认文本不能选择 \n</text>

<!-- 3.space 决定文本空格大小 -->
<text space="nbsp">Hello world 中文字符空格一半大小\n</text>
<text space="emsp">Hello world 中文字符空格大小\n</text>
<text space="ensp">Hello world 根据字体设置的空格大小\n</text>

<!-- 4.decode属性：是否解码文本  decode可以解析的有 &nbsp; &lt; &gt; &amp; &apos; &ensp; &emsp;-->
<text>5 &gt; 3  \n</text>
<text decode>5 &gt; 3  \n</text>
<text decode>&amp; &apos;  \n</text>